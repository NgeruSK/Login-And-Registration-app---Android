<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/mainConst"
    tools:context=".activities.RegisterActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="8dp"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar3">

        <EditText
            android:id="@+id/etSurname"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/names_round"
            android:ellipsize="middle"
            android:ems="14"
            android:hint="SURNAME"
            android:inputType="textCapCharacters"
            android:scrollbarSize="6dp"
            android:textAlignment="center"
            android:textSize="18sp" />

        <EditText
            android:id="@+id/etOtherNames"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/etSurname"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/names_round"
            android:ems="20"
            android:hint="OTHER NAMES"
            android:inputType="textCapCharacters"
            android:textAlignment="center"
            android:textAllCaps="true" />

        <EditText
            android:id="@+id/etId"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/etOtherNames"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/names_round"
            android:ems="10"
            android:hint="ID NUMBER"
            android:inputType="number"
            android:maxLength="9"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/etCalendar"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_below="@id/etId"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:background="@drawable/names_round"
            android:drawableLeft="@drawable/ic_calendar"
            android:ems="10"
            android:hint="DOB"
            android:inputType="textPersonName"
            android:paddingLeft="5dp"
            android:textAlignment="center" />

        <Button
            android:id="@+id/btnNextInit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/etCalendar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_round"
            android:text="Next"
            android:textAllCaps="false" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>