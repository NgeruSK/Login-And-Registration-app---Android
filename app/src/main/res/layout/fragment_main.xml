    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:id="@+id/lay1">

            <ImageView
                android:id="@+id/imgLogo"
                android:layout_width="175dp"
                android:layout_height="130dp"
                android:layout_centerHorizontal="true"
                app:srcCompat="@drawable/ilog3" />

            <EditText
                android:id="@+id/etUName"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/imgLogo"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/edit_round"
                android:drawableLeft="@drawable/mail_icon"
                android:drawablePadding="10dp"
                android:hint="Username"
                android:paddingLeft="10dp"
                android:textAllCaps="false"

                />

            <EditText
                android:id="@+id/etPassword"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/etUName"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="40dp"
                android:background="@drawable/edit_round"
                android:drawableLeft="@drawable/pass_icon"
                android:drawablePadding="10dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:paddingLeft="10dp"
                android:textAllCaps="false" />

            <LinearLayout
                android:id="@+id/layout_checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/etPassword"
                android:layout_marginTop="30dp"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/rememberMe"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:buttonTint="#4EEC14" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Remember Me"
                    android:textColor="#12D63D" />

            </LinearLayout>

            <Button
                android:id="@+id/btnLogin"
                android:layout_width="300dp"
                android:layout_height="40dp"
                android:layout_below="@+id/layout_checkBox"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="60dp"
                android:background="@drawable/button_round"
                android:drawableLeft="@drawable/login_icon"
                android:paddingLeft="20dp"
                android:textStyle="bold"
                android:text="LOGIN"
                android:textAlignment="center"
                android:textAllCaps="false" />

            <TextView
                android:id="@+id/txtNew"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/layout_checkBox"
                android:layout_marginTop="15dp"
                android:clickable="true"
                android:gravity="center"
                android:text="Forgot Password?"
                android:textColor="#0B82E0" />


    </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_below="@id/lay1"
                android:layout_centerHorizontal="true"
                android:gravity="bottom"
                android:orientation="horizontal"
                >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_capture_logo"

                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Powered By Capture Solutions "
                    android:textColor="#ffffff"
                    android:textSize="16dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="\u00a9"
                    android:textColor="#ffffff"
                    android:textSize="16dp" />
            </LinearLayout>
